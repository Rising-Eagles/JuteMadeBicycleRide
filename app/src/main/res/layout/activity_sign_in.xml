<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page_sign_in"
    tools:context=".UserRegistration.SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/sign_in_progbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:id="@+id/field_sign_in_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_below = "@id/sign_in_progbar">

            <ImageView
                android:id="@+id/icon_regd_user_mobile"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:src="@drawable/sign_in_phone_number"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="@drawable/background_inputbox_country_code"
                android:text="+880"
                android:textSize="28dp"
                android:textColor="@color/ColorGreenDark"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/regd_user_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/background_inputbox_country_last_10_digits"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Your mobile no (Last 10)"
                android:inputType="phone"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColorHint="@color/ColorGreenDark"
                android:textStyle="italic" />

        </LinearLayout>

        <Button
            android:id="@+id/verify_sign_in"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Sign In"
            android:textSize="20dp"
            android:textColor="@color/ColorBlack"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="2dp"
            android:background="@drawable/background_button_sign_in"
            android:layout_below="@id/verify_sign_in"/>

        <TextView
            android:id="@+id/registration_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="Don't have an account?"
            android:textColor="@color/ColorBlue"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="italic"/>

    </LinearLayout>

</RelativeLayout>